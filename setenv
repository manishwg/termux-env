#!/data/data/com.termux/files/usr/bin/bash

if [ -f ~/.bashrc ]; then
	echo removing old '.bashrc'
	rm -rf ~/.bashrc
fi

if [ -f ~/.bash_aliases ]; then
	echo removing old '.bash_aliases'
	rm -rf ~/.bash_aliases
fi

ln -v ~/termux-env/.bashrc ~/
ln -v ~/termux-env/.bash_aliases ~/






chmod 774 ~/termux-env/bin
chmod 775 ~/termux-env/bin/*

if [ -d ~/bin ]; then
	echo removing old 'bin' dir
	rm -rf ~/bin
fi
if [ -L ~/bin ]; then
	echo removing old 'bin' link
	rm -f ~/bin
fi

cwd=$(pwd)
cd ~
ln -sv ./termux-env/bin ~/
cd $cwd